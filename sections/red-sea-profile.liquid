
<section class="red-sea-profile-section">
  <div class="container">
    <div class="profile-grid">

      <!-- Left Side -->
      <div class="profile-text">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.paragraph1 }}</p>
        <p>{{ section.settings.paragraph2 }}</p>
        <a href="{{ section.settings.button_link }}" class="btn-read">{{ section.settings.button_text }}</a>
      </div>

      <!-- Right Side -->
      <div class="profile-icons">
        {% for block in section.blocks %}
          <div class="icon-card">
            <span class="icon">{{ block.settings.icon }}</span>
            <p>{{ block.settings.label }}</p>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Red Sea Profile Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Profile: Red Sea Treasures"
    },
    {
      "type": "textarea",
      "id": "paragraph1",
      "label": "Paragraph 1",
      "default": "At Red Sea Treasures, we are not just a store, but a journey to explore the rarest and finest authentic Yemeni and Arabian products. Each piece of Yemeni honey, coffee bean, or thread in heritage garments carries a story from history. Our commitment is to present these treasures to you with global quality and modern design that preserves their value."
    },
    {
      "type": "textarea",
      "id": "paragraph2",
      "label": "Paragraph 2",
      "default": "We ensure direct communication with artisans and farmers to guarantee the highest levels of authenticity and purity."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Read the Full Story"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
    }
  ],
  "blocks": [
    {
      "type": "icon_item",
      "name": "Icon Item",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Emoji or Text)",
          "default": "üçÉ"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "100% Natural Products"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Red Sea Profile Section",
      "category": "Custom Sections",
      "blocks": [
        { "type": "icon_item" },
        { "type": "icon_item" },
        { "type": "icon_item" },
        { "type": "icon_item" }
      ]
    }
  ]
}
{% endschema %}
